# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# NextAuth Configuration
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_... or sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_test_... or pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID=price_...

# App Configuration
NEXT_PUBLIC_APP_URL=https://your-domain.com

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here

# Web Push (VAPID) - Generate using: npx web-push generate-vapid-keys
WEBPUSH_PUBLIC_KEY=BNxxxxxxxxxxxxxxxxxxxxxxxx
WEBPUSH_PRIVATE_KEY=xxxxxxxxxxxxxxxxxxxxxxxx
WEBPUSH_CONTACT_EMAIL=mailto:you@example.com

# Client needs public key
NEXT_PUBLIC_VAPID_PUBLIC_KEY=${WEBPUSH_PUBLIC_KEY}

# Dev: keep SW off unless you opt-in
ENABLE_PWA_DEV=false

# Legacy VAPID keys (for backward compatibility)
VAPID_PRIVATE_KEY=${WEBPUSH_PRIVATE_KEY}
VAPID_SUBJECT=${WEBPUSH_CONTACT_EMAIL}

# Production Settings
NODE_ENV=production 